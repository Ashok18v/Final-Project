@model IEnumerable<WebAppMvc.Models.ApprovalRejected>

@{
    ViewData["Title"] = "ApprovalStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Status</h1>


<table class="table">
    <caption>New York City Marathon Results</caption>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
              <a class="btn btn-danger" asp-action="DeleteApprovalRejected" asp-route-Email="@item.Email" asp-controller="Admin">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
 <a class="btn btn-primary" asp-action="Index">Back to List</a>
